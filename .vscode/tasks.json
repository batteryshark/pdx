        {
            // VX LOADER [Windows]
            "label": "[Loader] DropKick [Windows 64-bit]",
            "type": "shell",
            "command": [
                "x86_64-w64-mingw32-gcc",
                "-DTARGET_ARCH_64",
                "-fshort-wchar",              
                "${workspaceFolder}/src/dropkick.c",
                "-static",      
                "-static-libgcc",                  
                "-o ${workspaceFolder}/loaders/dropkick64.exe"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },     
