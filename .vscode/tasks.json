{
    "version": "2.0.0",
    "tasks": [
        // -- [COMMON TASKS] -- 
        {
            "label": "Create Binary Path",
            "type": "shell",
            "osx": {
                "command": "mkdir -p ./bin"
            },
            "linux": {
                "command": "mkdir -p ./bin"
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C",
                    "if not exist .\\bin mkdir .\\bin"
                ]
            }
        },

        //  -- [WINDOWS TASKS] --
        {
            "label": "Build Binaries [Windows 64-bit]",
            "dependsOn": [
                "Create Binary Path",
                "PDXProc Library [Windows 64-bit]",
                "DropKick Loader [Windows 64-bit]",
                "PDXReg Library [Windows 64-bit]",
                "PDXEnv Library [Windows 64-bit]",
                "PDXFS Library [Windows 64-bit]"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Binaries [Windows 32-bit]",
            "dependsOn": [
                "Create Binary Path",
                "PDXProc Library [Windows 32-bit]",
                "DropKick Loader [Windows 32-bit]",
                "PDXReg Library [Windows 32-bit]",
                "PDXEnv Library [Windows 32-bit]",
                "PDXFS Library [Windows 32-bit]"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "PDXProc Library [Windows 64-bit]",
            "type": "shell",
            "command": [
                "x86_64-w64-mingw32-gcc",
                "-shared",
                "-fshort-wchar",
                "'-Wl,--subsystem,native'",
                "-nostartfiles",
                "-nostdlib",
                "'-Wl,-eDllMain'",
                "${workspaceFolder}/src/windows/common/ntmin/*.c",
                "${workspaceFolder}/src/windows/common/*.c",
                "${workspaceFolder}/src/windows/process/pdxproc.c",
                "-static",
                "-static-libgcc",
                "-lntdll",
                "-lgcc",
                "-o ${workspaceFolder}/bin/pdxproc64.dll"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "PDXProc Library [Windows 32-bit]",
            "type": "shell",
            "command": [
                "i686-w64-mingw32-gcc",
                "-shared",
                "-fshort-wchar",
                "'-Wl,--subsystem,native'",
                "-nostartfiles",
                "-nostdlib",
                "'-Wl,-e_DllMain@12'",
                "${workspaceFolder}/src/windows/common/ntmin/*.c",
                "${workspaceFolder}/src/windows/common/*.c",
